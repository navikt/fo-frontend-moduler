{
  "name": "root",
  "private": true,
  "scripts": {
    "create": "lerna create",
    "tsc": "lerna run tsc",
    "publish": "lerna run tsc && lerna publish from-package --yes",
    "cli-publish": "lerna run tsc && lerna publish from-package --yes --registry https://npm.pkg.github.com/:_authToken=${NPM_TOKEN}",
    "commit": "git-cz",
    "test": "lerna run test",
    "deploy": "lerna publish",
    "bump-versions": "lerna version"
  },
  "devDependencies": {
    "@types/node": "^12.7.1",
    "cz-lerna-changelog": "^2.0.2",
    "git-cz": "^3.2.1",
    "lerna": "^3.16.4",
    "typescript": "^3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
}
